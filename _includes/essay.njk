<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/breaths/">Breaths</a></li>
    </ul>
  </nav>
  
  <article>
    <h1>{{ title }}</h1>
    {{ content | safe }}
  </article>

  <hr>

<div id="chat-toggle">ðŸ’¬</div>

<div id="chat-box">
  <div id="chat-header">
    <strong>Ask about this essay</strong>
    <span id="chat-close">&times;</span>
  </div>
  <form id="qa-form">
    <textarea id="question" rows="3" placeholder="Ask a question..."></textarea>
    <button type="submit">Ask</button>
  </form>
  <pre id="response"></pre>
</div>

<script>
  const essay = `{{ content | striptags | replace('\n', ' ') | trim | escape | safe }}`;

  const chatBox = document.getElementById("chat-box");
  const chatToggle = document.getElementById("chat-toggle");
  const chatClose = document.getElementById("chat-close");

  chatToggle.onclick = () => chatBox.style.display = "block";
  chatClose.onclick = () => chatBox.style.display = "none";

  document.getElementById("qa-form").addEventListener("submit", async (e) => {
    e.preventDefault();
    const question = document.getElementById("question").value;
    const responseEl = document.getElementById("response");
    responseEl.textContent = "Thinking...";

    const res = await fetch("/.netlify/functions/ask", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ essay, question })
    });

    const data = await res.json();
    responseEl.textContent = data.answer || data.error || "No response.";
  });
</script>

</body>
</html>
