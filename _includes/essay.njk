<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/breaths/">Breaths</a></li>
    </ul>
  </nav>
  
  <article>
    <h1>{{ title }}</h1>
    {{ content | safe }}
  </article>

  <hr>

  <div id="prompt-box">
    <form id="qa-form">
      <textarea
        id="question"
        rows="1"
        placeholder="Ask a question about this essay..."
      ></textarea>
      <button type="submit">Send</button>
    </form>
  </div>

<pre id="response" class="qa-response"></pre>

{% set supplementEntry = collections.supplements | find(item => item.data.slug == supplementSlug) %}
{% set supplementMarkdown = supplementEntry.templateContent | striptags | replace('\n', ' ') | trim %}

<script>
  const essay = `{{ content | striptags | replace('\n', ' ') | trim | escape | safe }}`;
  const supplement = `{{ supplementMarkdown | escape | safe }}`;

  const form = document.getElementById("qa-form");
  const questionInput = document.getElementById("question");
  const responseEl = document.getElementById("response");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const question = questionInput.value.trim();
    if (!question) return;
    responseEl.textContent = "Thinking...";

    const res = await fetch("/.netlify/functions/ask", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ essay, question, supplement })
    });

    const data = await res.json();
    responseEl.textContent = data.answer || data.error || "No response.";
    questionInput.value = "";
  });
</script>

</body>
</html>
